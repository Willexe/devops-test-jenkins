pipeline {
    agent {
        docker {
            image 'node:18'
            args '-p 3000:3000 -p 3001:3001'
        }
    }

    stages {
        stage('Clonar Repositório') {
            steps {
               
               git branch: 'main', url: 'https://github.com/Willexe/devops-test-jenkins.git'
            }
        }

        stage('Instalar Dependências Backend') {
            steps {
                dir('api') {
                    sh 'npm install'
                }
            }
        }

        stage('Rodar Testes Backend') {
            steps {
                dir('api') {
                    sh 'npm test'
                }
            }
        }

        stage('Instalar Dependências Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline finalizado com sucesso!'
        }
        failure {
            echo '❌ O pipeline falhou. Verifique os logs.'
        }
        always {
            echo 'ℹ️ Execução finalizada (com ou sem erro).'
        }
    }
}

