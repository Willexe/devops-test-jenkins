pipeline {
      agent {
        docker {
            image 'node18-git' // essa já tem apt-get
            args '-p 3000:3000 -p 3001:3001 -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {

        stage('Instalar Dependências API') {
            steps {
                dir('api') {
                    sh 'npm install'
                }
            }
        }

        stage('Instalar Dependências Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Testar API') {
            steps {
                dir('api') {
                    sh 'npm test || true' // evitar falha total se não tiver testes ainda
                }
            }
        }

        stage('Subir Projeto') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline executado com sucesso!'
        }
        failure {
            echo '❌ Falha na execução do pipeline.'
        }
    }
}
